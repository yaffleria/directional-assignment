{
  "name": "react-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "generate:api": "swagger-typescript-api generate -p src/api/swagger.json -o src/api -n api.ts --modular --axios",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:generate-data": "playwright test --grep \"create 100\"",
    "test:single-post": "playwright test --grep \"should create a new post\""
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@repo/components": "workspace:*",
    "@repo/utils": "workspace:*",
    "@tanstack/react-query": "^5.90.11",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.67.0",
    "react-intersection-observer": "^10.0.0",
    "react-router-dom": "^7.9.6",
    "recharts": "^2.15.4",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "swagger-typescript-api": "^13.2.16",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
